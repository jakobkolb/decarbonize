#!/bin/bash
#SBATCH --mail-type=BEGIN,END,FAIL,TIME_LIMIT_80
#SBATCH --qos=short
#SBATCH --array=0-1
#SBATCH --job-name=X0b
#SBATCH --output=%A_X0b_%a_.out
#SBATCH --error=%A_X0b_%a_.err
#SBATCH --time=0-24
#SBATCH --nodes=16
#SBATCH --tasks-per-node=16

module load hpc/2015 anaconda/5.0.0_py3
export I_MPI_PMI_LIBRARY=/p/system/slurm/lib/libpmi.so
export OMP_NUM_THREADS=1

source activate py36

echo "_______________________________________________"
echo "SLURM JOB ID: $SLURM_JOBID"
echo "$SLURM_NTASKS tasks"
echo "_______________________________________________"

date

srun -n 1 python -W ignore X0b_scalling.py 2 $SLURM_ARRAY_TASK_ID

date

cd ../experiments
srun -n $SLURM_NTASKS python -W ignore X0b_scalling.py 0 $SLURM_ARRAY_TASK_ID
